# resolve links - $0 may be a softlink
PRG="$0"

while [ -h "$PRG" ]; do
  ls=`ls -ld "$PRG"`
  link=`expr "$ls" : '.*-> \(.*\)$'`
  if expr "$link" : '/.*' > /dev/null; then
    PRG="$link"
  else
    PRG=`dirname "$PRG"`/"$link"
  fi
done

PRGDIR=`dirname "$PRG"`
BASEDIR=`cd "$PRGDIR/.." >/dev/null; pwd`

# Reset the REPO variable. If you need to influence this use the environment setup file.
REPO=


# OS specific support.  $var _must_ be set to either true or false.
cygwin=false;
darwin=false;
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  Darwin*) darwin=true
           if [ -z "$JAVA_VERSION" ] ; then
             JAVA_VERSION="CurrentJDK"
           else
             echo "Using Java version: $JAVA_VERSION"
           fi
		   if [ -z "$JAVA_HOME" ]; then
		      if [ -x "/usr/libexec/java_home" ]; then
			      JAVA_HOME=`/usr/libexec/java_home`
			  else
			      JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/${JAVA_VERSION}/Home
			  fi
           fi       
           ;;
esac

if [ -z "$JAVA_HOME" ] ; then
  if [ -r /etc/gentoo-release ] ; then
    JAVA_HOME=`java-config --jre-home`
  fi
fi

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --unix "$CLASSPATH"`
fi

# If a specific java binary isn't specified search for the standard 'java' binary
if [ -z "$JAVACMD" ] ; then
  if [ -n "$JAVA_HOME"  ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
      # IBM's JDK on AIX uses strange locations for the executables
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD=`which java`
  fi
fi

if [ ! -x "$JAVACMD" ] ; then
  echo "Error: JAVA_HOME is not defined correctly." 1>&2
  echo "  We cannot execute $JAVACMD" 1>&2
  exit 1
fi

if [ -z "$REPO" ]
then
  REPO="$BASEDIR"/repo
fi

CLASSPATH="$BASEDIR"/etc:"$REPO"/cproject-0.7.0-SNAPSHOT.jar:"$REPO"/guava-18.0.jar:"$REPO"/svg2xml-2.4.0-SNAPSHOT.jar:"$REPO"/pdf2svg-2.4.0-SNAPSHOT.jar:"$REPO"/pdfbox-1.8.8.jar:"$REPO"/fontbox-1.8.8.jar:"$REPO"/jempbox-1.8.8.jar:"$REPO"/commons-logging-1.1.1.jar:"$REPO"/svghtml-1.0.0-SNAPSHOT.jar:"$REPO"/euclid-2.2.1-SNAPSHOT.jar:"$REPO"/junit-4.8.2.jar:"$REPO"/log4j-1.2.16.jar:"$REPO"/commons-lang3-3.0.jar:"$REPO"/commons-math-2.2.jar:"$REPO"/joda-time-1.6.2.jar:"$REPO"/xom-1.2.5.jar:"$REPO"/jtidy-4aug2000r7-dev.jar:"$REPO"/tagsoup-1.2.jar:"$REPO"/htmlunit-2.15.jar:"$REPO"/xalan-2.7.1.jar:"$REPO"/serializer-2.7.1.jar:"$REPO"/commons-collections-3.2.1.jar:"$REPO"/httpclient-4.3.3.jar:"$REPO"/httpcore-4.3.2.jar:"$REPO"/httpmime-4.3.3.jar:"$REPO"/commons-codec-1.9.jar:"$REPO"/htmlunit-core-js-2.15.jar:"$REPO"/xercesImpl-2.11.0.jar:"$REPO"/nekohtml-1.9.21.jar:"$REPO"/cssparser-0.9.14.jar:"$REPO"/sac-1.3.jar:"$REPO"/jetty-websocket-8.1.15.v20140411.jar:"$REPO"/jetty-util-8.1.15.v20140411.jar:"$REPO"/jetty-io-8.1.15.v20140411.jar:"$REPO"/jetty-http-8.1.15.v20140411.jar:"$REPO"/bcprov-jdk16-1.46.jar:"$REPO"/gson-2.8.2.jar:"$REPO"/commons-csv-1.2.jar:"$REPO"/imageanalysis-1.3.0-SNAPSHOT.jar:"$REPO"/io-0.17.jar:"$REPO"/ddogleg-0.5.jar:"$REPO"/ip-0.17.jar:"$REPO"/xstream-1.4.7.jar:"$REPO"/xmlpull-1.1.3.1.jar:"$REPO"/xpp3_min-1.1.4c.jar:"$REPO"/georegression-0.6.jar:"$REPO"/ejml-0.25.jar:"$REPO"/feature-0.17.jar:"$REPO"/visualize-0.17.jar:"$REPO"/recognition-0.17.jar:"$REPO"/sfm-0.17.jar:"$REPO"/calibration-0.17.jar:"$REPO"/geo-0.17.jar:"$REPO"/imgscalr-lib-4.2.jar:"$REPO"/Saxon-HE-9.6.0-3.jar:"$REPO"/opennlp-tools-1.6.0.jar:"$REPO"/json-path-2.0.0.jar:"$REPO"/slf4j-api-1.7.10.jar:"$REPO"/json-smart-2.1.1.jar:"$REPO"/asm-1.0.2.jar:"$REPO"/asm-3.3.1.jar:"$REPO"/jsoup-1.8.2.jar:"$REPO"/xmlunit-1.4.jar:"$REPO"/commons-io-2.4.jar:"$REPO"/xml-apis-1.4.01.jar:"$REPO"/norma-0.7.0-alpha.jar

ENDORSED_DIR=
if [ -n "$ENDORSED_DIR" ] ; then
  CLASSPATH=$BASEDIR/$ENDORSED_DIR/*:$CLASSPATH
fi

if [ -n "$CLASSPATH_PREFIX" ] ; then
  CLASSPATH=$CLASSPATH_PREFIX:$CLASSPATH
fi

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --windows "$CLASSPATH"`
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
  [ -n "$HOME" ] && HOME=`cygpath --path --windows "$HOME"`
  [ -n "$BASEDIR" ] && BASEDIR=`cygpath --path --windows "$BASEDIR"`
  [ -n "$REPO" ] && REPO=`cygpath --path --windows "$REPO"`
fi

exec "$JAVACMD" $JAVA_OPTS  \
  -classpath "$CLASSPATH" \
  -Dapp.name="norma" \
  -Dapp.pid="$$" \
  -Dapp.repo="$REPO" \
  -Dapp.home="$BASEDIR" \
  -Dbasedir="$BASEDIR" \
  org.xmlcml.norma.Norma \
  "$@"
